<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <ItemGroup Condition="'$(PlatformTarget)'=='x86'">
    <Content Include="$(MSBuildThisFileDirectory)..\..\runtimes\win-x86\native\NativeDll.dll">
      <Link>NativeDll.dll</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup Condition="'$(PlatformTarget)'=='x64'">
    <Content Include="$(MSBuildThisFileDirectory)..\..\runtimes\win-x64\native\NativeDll.dll">
      <Link>NativeDll.dll</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>


  <Target Name="VerifyWrapperDllTargets" BeforeTargets="Build">
    <Message Importance="High" Text="WrapperDll.targets imported and running!" />
  </Target>

</Project>
